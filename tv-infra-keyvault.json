{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
      "environment": {
      "type": "string"
      },
      "location": {
        "type": "string"
      }
    },
    "variables": {
      "keyvaultname": "[concat('tv',parameters('environment'),'keyvault')]"
    },
    "resources": [
      {
        "name": "[variables('keyvaultname')]",
        "type": "Microsoft.KeyVault/vaults",
        "apiVersion": "2023-07-01",
        "location": "[parameters('location')]",
        "tags": {
          "displayName": "[variables('keyvaultname')]"
        },
        "identity": {
          "type": "SystemAssigned"
        },
        "properties": {
          "enabledForDeployment": true,
          "enabledForTemplateDeployment": true,
          "enabledForDiskEncryption": true,
          "tenantId": "[subscription().tenantId]",
          "accessPolicies": [
            {
              "tenantId": "[subscription().tenantId]",
              "objectId": "[reference(resourceId('Microsoft.ManagedIdentity/ManagedIdentity', variables('keyvaultname')), '2023-07-01').principalId]",
              "permissions": {
                "keys": [
                  "Get",
                  "list"
                ],
                "secrets": [
                  "List",
                  "Get",
                  "Set"
                ]
              }
            }
          ],
          "sku": {
            "name": "standard",
            "family": "A"
          }
        },
        "resources": [
          {
            "type": "secrets",
            "name": "keyVaultSecret",
            "apiVersion": "2016-10-01",
            "dependsOn": [
              "[resourceId('Microsoft.KeyVault/vaults', variables('keyvaultname'))]"
            ],
            "properties": {
              "value": "secretValue"
            }
          }
        ]
      }
    ],
    "outputs": {
      "keyvaultname": {
        "type": "string",
        "value": "[variables('keyvaultname')]"
      }
    }
  }